<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizarra"
    tools:context="ar.com.gmn.android.ar.com.gmn.android.fragment.SinglePlayerFragment"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="22dp"
        android:orientation="vertical" >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
            android:layout_weight="3"

                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/numeroLayout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <ar.com.gmn.android.view.component.CustomNumberPicker2
                        android:id="@+id/digit1"
                        style="@style/SP_NumberPiker"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"

                        android:layout_weight="1">

                    </ar.com.gmn.android.view.component.CustomNumberPicker2>
                    <ar.com.gmn.android.view.component.CustomNumberPicker2
                        android:id="@+id/digit2"
                        style="@style/SP_NumberPiker"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"

                        android:layout_weight="1">

                    </ar.com.gmn.android.view.component.CustomNumberPicker2>
                    <ar.com.gmn.android.view.component.CustomNumberPicker2
                        android:id="@+id/digit3"
                        style="@style/SP_NumberPiker"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"

                        android:layout_weight="1">

                    </ar.com.gmn.android.view.component.CustomNumberPicker2>
                    <ar.com.gmn.android.view.component.CustomNumberPicker2
                        android:id="@+id/digit4"
                        style="@style/SP_NumberPiker"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"

                        android:layout_weight="1">

                    </ar.com.gmn.android.view.component.CustomNumberPicker2>
                </LinearLayout>
                <ImageView
                    android:id="@+id/prueba"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@drawable/try_chalk_button"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ar.com.gmn.android.view.component.TRRespuestaSPHead
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:styleId="@integer/style_sp">

            </ar.com.gmn.android.view.component.TRRespuestaSPHead>


        <ScrollView
                android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingTop="5dp">

        <LinearLayout
                android:id="@+id/results"
                android:layout_width="match_parent"
                    android:layout_height="fill_parent"

                android:background="@android:color/transparent"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>