<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonOptionMenu">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ResultadoDuelo">
        <item name="android:textColor">#ff062D89</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="DueloNumberPiker">
        <item name="styleId">@integer/style_duelo</item>
        <item name="android:textColor">#ff062D89</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DueloNumberPiker_Button" parent="DueloNumberPiker">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="DueloNumberPiker_Number" parent="DueloNumberPiker">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="CellHelpTable">
        <item name="android:textColor">#ff062D89</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_borders</item>
    </style>
        <style name="CellHelpTableSP">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/cell_borders_sp</item>
    </style>

    <style name="ResultadoSinglePLayer">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SP_NumberPiker">
        <item name="styleId">@integer/style_sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SP_NumberPiker_Button" parent="SP_NumberPiker">
        <item name="android:textSize">32dp</item>
    </style>
    <style name="SP_NumberPiker_Number" parent="SP_NumberPiker">
        <item name="android:textSize">32dp</item>
    </style>
    <style name="duel_item_layout">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>




    </style>

    <style name="duel_item_layout.text" >
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="duel_item_layout.photo_frame">

    </style>

</resources>